<?xml version="1.0" encoding="UTF-8"?>
<!-- sw.build.version -->
<extension type="plugin" group="schuweb_sitemap" version="3" method="upgrade">
    <name>SchuWeb Sitemap - Zoo Plugin</name>
    <author>Sven Schultschik</author>
    <creationDate>sw.build.date</creationDate>
    <copyright>GNU/GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>schuwebext@schultschik.de</authorEmail>
    <authorUrl>extensions.schultschik.com</authorUrl>
    <version>sw.build.version</version>
    <description>SCHUWEB_SITEMAP_ZOO_PLUGIN_DESCRIPTION</description>
    <files>
        <filename plugin="com_zoo">com_zoo.php</filename>
        <filename>index.html</filename>
    </files>
    <updateservers>
        <server type="extension" priority="1" name="SchuWeb Sitemap - Zoo Integration">https://raw.githubusercontent.com/svanschu/SchuWeb-Sitemap/master/update/schuweb_sitemap_plugin_zoo.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="BASIC">
                <field name="include_categories" type="list" default="1" label="SCHUWEB_SITEMAP_SETTING_SHOW_CATEGORIES" description="SCHUWEB_SITEMAP_SETTING_SHOW_CATEGORIES_DESC">
                    <option value="0">SCHUWEB_SITEMAP_OPTION_NEVER</option>
                    <option value="1">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
                    <option value="2">SCHUWEB_SITEMAP_OPTION_XML_ONLY</option>
                    <option value="3">SCHUWEB_SITEMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="include_items" type="list" default="1" label="SCHUWEB_SITEMAP_SETTING_SHOW_ITEMS" description="SCHUWEB_SITEMAP_SETTING_SHOW_ITEMS_DESC">
                    <option value="0">SCHUWEB_SITEMAP_OPTION_NEVER</option>
                    <option value="1">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
                    <option value="2">SCHUWEB_SITEMAP_OPTION_XML_ONLY</option>
                    <option value="3">SCHUWEB_SITEMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="cat_priority" type="list" default="-1" label="SCHUWEB_SITEMAP_SETTING_CATEGORY_PRIORITY" description="SCHUWEB_SITEMAP_SETTING_CATEGORY_PRIORITY_DESC">
                    <option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="cat_changefreq" type="list" default="-1" label="SCHUWEB_SITEMAP_SETTING_CATEGORY_CHANGE_FREQ" description="Set the chage frequency for the categories">
                    <option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
                    <option value="hourly">SCHUWEB_SITEMAP_OPTION_HOURLY</option>
                    <option value="daily">SCHUWEB_SITEMAP_OPTION_DAILY</option>
                    <option value="weekly">SCHUWEB_SITEMAP_OPTION_WEEKLY</option>
                    <option value="monthly">SCHUWEB_SITEMAP_OPTION_MONTHLY</option>
                    <option value="yearly">SCHUWEB_SITEMAP_OPTION_YEARLY</option>
                    <option value="never">SCHUWEB_SITEMAP_OPTION_NEVER</option>
                </field>
                <field name="item_priority" type="list" default="-1" label="Item Priority" description="Set the priority for the items">
                    <option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="item_changefreq" type="list" default="-1" label="Item Change frequency" description="Set the chage frequency for the items">
                    <option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
                    <option value="hourly">SCHUWEB_SITEMAP_OPTION_HOURLY</option>
                    <option value="daily">SCHUWEB_SITEMAP_OPTION_DAILY</option>
                    <option value="weekly">SCHUWEB_SITEMAP_OPTION_WEEKLY</option>
                    <option value="monthly">SCHUWEB_SITEMAP_OPTION_MONTHLY</option>
                    <option value="yearly">SCHUWEB_SITEMAP_OPTION_YEARLY</option>
                    <option value="never">SCHUWEB_SITEMAP_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
